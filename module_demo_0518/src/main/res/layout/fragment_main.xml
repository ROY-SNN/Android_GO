<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.module_demo_0518.Socket_many_Activity$PlaceholderFragment">


    <TextView
        android:id="@+id/textViewStauts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插座状态"
        android:layout_below="@+id/imageViewButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/buttonSocketInFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="打 开/关 闭"
        android:textSize="20dp"
        android:onClick="onClickButton"
        android:background="@drawable/btn_all_shape"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewStauts"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sock_on"
        android:layout_marginTop="117dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
