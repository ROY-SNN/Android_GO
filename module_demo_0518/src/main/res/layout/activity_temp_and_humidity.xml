<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context="com.example.module_demo_0518.TempAndHumidityActivity">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="760dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="382dp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:background="@drawable/shape_login_from">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="66dp"
                        android:layout_marginLeft="12dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/suns"/>
                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="53dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/cloudy"/>
                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="38dp"
                        android:background="@drawable/moon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/temp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="38dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/thh" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="55dp">
                        <TextView
                            android:id="@+id/textViewTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="温度"
                            android:textSize="40dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="#000000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="382dp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:background="@drawable/shape_login_from">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="63dp"
                        android:layout_marginLeft="12dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/suns" />
                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="53dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/travel"/>
                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="38dp"
                        android:background="@drawable/water"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hum"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tth" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/textViewHum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="湿度"
                            android:textSize="40dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
