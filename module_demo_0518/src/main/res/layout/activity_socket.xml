<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.module_demo_0518.SocketActivity">

    <Button
        android:id="@+id/buttonSocket"
        android:layout_width="181dp"
        android:layout_height="62dp"
        android:text="更改插座开关的状态"
        android:background="@color/aquamarine"
        android:onClick="onClickSocket"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="176dp"
        app:layout_constraintHorizontal_bias="0.454"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSocket_St"
        app:layout_constraintVertical_bias="0.519" />

    <TextView
        android:id="@+id/textViewSocket_St"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:text="0/1"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="101dp"
        app:layout_constraintHorizontal_bias="0.477" />
</android.support.constraint.ConstraintLayout>
