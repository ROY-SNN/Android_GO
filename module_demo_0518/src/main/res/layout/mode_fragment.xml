<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.module_demo_0518.ModeFragment">

    <Button
        android:id="@+id/button_mode1"
        android:layout_width="218dp"
        android:layout_height="86dp"
        android:text="游戏模式"
        android:background="@drawable/btn_all_shape"
        android:onClick="onClickbuttonGame"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="95dp" />

    <Button
        android:id="@+id/button_mode4"
        android:layout_width="218dp"
        android:layout_height="86dp"
        android:text="上班模式"
        android:background="@drawable/btn_all_shape"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/button_mode1" />



    <Button
        android:id="@+id/button_mode2"
        android:layout_width="218dp"
        android:layout_height="86dp"
        android:text="下班模式"
        android:background="@drawable/btn_all_shape"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/button_mode4" />

    <Button
        android:id="@+id/button_mode3"
        android:layout_width="218dp"
        android:layout_height="86dp"
        android:text="家长模式"
        android:background="@drawable/btn_all_shape"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/button_mode2" />
</android.support.constraint.ConstraintLayout>
