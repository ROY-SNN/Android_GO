<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.module_demo_0518.SelectiveSensorActivity">

    <Button
        android:id="@+id/buttonTempAndHumidity"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:text="温湿度"
        android:background="@color/lightpink"
        android:onClick="onClickTempAndHumidity"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="211dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.4" />

    <Button
        android:id="@+id/buttonSocket"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:text="插座"
        android:background="@color/lightpink"
        android:onClick="onClickSocket"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonTempAndHumidity" />

    <Button
        android:id="@+id/buttonDoor"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:text="门禁"
        android:background="@color/lightpink"
        android:onClick="onClickDoor"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.456"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSocket" />

    <Button
        android:id="@+id/buttonInfrared"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:text="红外控制"
        android:background="@color/lightpink"
        android:onClick="onClickInfrared"
        android:layout_marginRight="47dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDoor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="149dp"
        android:layout_height="62dp"
        android:text="用户名"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.148"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="85dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/lys"
        android:layout_marginLeft="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="45dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/wsd"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="211dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="45dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/cz"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="45dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/doorr"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

</android.support.constraint.ConstraintLayout>
