<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.module_demo_0518.SelectiveSensorActivity">

    <view.Menu
        android:layout_width="392dp"
        android:layout_height="830dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/left_menu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFffff"
                android:orientation="vertical">

                <!-->                        <-->
                <LinearLayout
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="105dp"
                    android:layout_width="370dp"
                    android:layout_height="290dp"
                    android:background="@drawable/shape_login_from">
                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="vertical">
                    </ListView>

                </LinearLayout>
                <!-->                        <-->



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="18dp"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/buttonTempAndHumidity"
                        android:layout_marginLeft="20dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"

                        android:background="@drawable/th"
                        android:onClick="onClickTempAndHumidity"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="1.0" />

                    <ImageButton
                        android:id="@+id/buttonSocket"
                        android:layout_marginLeft="20dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"

                        android:background="@drawable/socket"
                        android:onClick="onClickSocket"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonSocket"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.571" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="18dp"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/buttonDoor"
                        android:layout_marginLeft="20dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"

                        android:background="@drawable/buttondoor"
                        android:onClick="onClickDoor"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="1.0" />
                    <ImageButton
                        android:id="@+id/buttonInfrared"
                        android:layout_marginLeft="20dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"

                        android:background="@drawable/buttonir"
                        android:onClick="onClickInfrared"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="1.0" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </view.Menu>
</android.support.constraint.ConstraintLayout>
